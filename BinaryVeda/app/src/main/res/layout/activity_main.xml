<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="31pt"
            android:layout_marginStart="21pt"
            android:src="@drawable/ic_art_gallery_center_"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="7pt"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_group_301_copy"
            android:layout_height="@dimen/_200sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="@string/lorem"
            android:textSize="8pt"
            android:padding="@dimen/_15sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
<Button
    android:id="@+id/btnRegister"
    android:layout_width="wrap_content"
    android:background="@drawable/button"
    android:text="Register"
    android:textColor="#FFF"
    android:drawablePadding="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    android:padding="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:drawableStart="@drawable/ic_group_3_copy"
    android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCollector"
                android:layout_width="match_parent"
                android:text="@string/collector"
                android:padding="@dimen/_5sdp"
                android:textSize="22sp"
                android:textColor="#5B5959"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
                android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_group_3_copy_3"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#9CBFD8"
            android:text="@string/track_my_application"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="match_parent"/>
</LinearLayout>


</androidx.core.widget.NestedScrollView>